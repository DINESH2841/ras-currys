# RAS Currys Backend - Environment Variables Example
# Copy to .env and fill in your actual values

# ==================== SERVER CONFIGURATION ====================
# Node environment
NODE_ENV=production

# Server port
PORT=5000

# ==================== DATABASE ====================
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/ras-currys

# ==================== FRONTEND ====================
# Frontend URL (single origin)
FRONTEND_URL=https://yourdomain.com

# Multiple frontend URLs (comma-separated) - Optional, overrides FRONTEND_URL if set
FRONTEND_URLS=https://yourdomain.com,https://www.yourdomain.com

# ==================== AUTHENTICATION ====================
# JWT secret for signing tokens (minimum 32 characters, use strong random value)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-32-chars-minimum

# ==================== EMAIL SERVICE ====================
# Gmail SMTP configuration for sending OTPs and emails
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-16-chars

# Note: For Gmail, generate an App Password:
# 1. Enable 2-Factor Authentication
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Select Mail and Windows Computer
# 4. Copy the 16-character password here

# ==================== PAYMENT GATEWAY ====================
# Razorpay payment gateway credentials
# Get from: https://dashboard.razorpay.com/app/keys

# Razorpay Key ID (public)
RAZORPAY_KEY=rzp_live_RwVBlcZkNQViLy

# Razorpay Secret Key (private - DO NOT EXPOSE)
RAZORPAY_SECRET=oPQT482v1GnFquSf1QEBgg6c

# Razorpay Webhook Secret (for webhook signature verification)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-32-chars

# ==================== PHASE 2 SECURITY ====================

# OTP Security: HMAC-SHA256 secret for hashing OTPs
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Must be set in production, minimum 32 characters
OTP_HASH_SECRET=your-otp-hash-secret-32-chars-minimum

# Logging Level: error, warn, info, http, debug, verbose
# Production recommended: info
# Development recommended: debug
LOG_LEVEL=info

# ==================== DEVELOPMENT ONLY ====================
# These variables are optional and only needed for development/debugging

# Allow insecure HTTP in development (set to true only for localhost)
ALLOW_INSECURE=false

# Verbose logging (overrides LOG_LEVEL if set)
VERBOSE_LOGGING=false

# ==================== GENERATION COMMANDS ====================
# Run these commands to generate secure random values:
#
# For JWT_SECRET:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# For OTP_HASH_SECRET:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# For RAZORPAY_WEBHOOK_SECRET:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# PowerShell (Windows):
#   [System.Convert]::ToHexString([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
